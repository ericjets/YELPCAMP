<% layout('layouts/boilerplate')%>
<h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>
    <% for(let camp of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=camp.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=camp.title%></h5>
                        <small class="card-location text-muted"><%=camp.location%></small>
                        <p class="card-description"><%=camp.description%></p>
                        <p class="card-price"><strong><em>$<%=camp.price%>.00</em></strong></p>
                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%> ">View Campground</a>
                    </div>
                </div>
            </div>
        </div>        
    <% } %>
